<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <title><% unless @project.nil? then%><%= @project.name%><%else%>Unptnt - Make Something! <%end%></title>
  <%= stylesheet_link_tag "base" -%>
  <%= stylesheet_link_tag "blueprint/screen" -%>
  <%= stylesheet_link_tag "display" -%>

  <%= javascript_include_tag "prototype" %>
  <%= javascript_include_tag "scriptaculous" %>
  <%= javascript_include_tag "effects" %>
  <%= javascript_include_tag "controls" %>
  <%= javascript_include_tag :defaults %>
</head>
<body>

  <%= render_flash_messages %>
  <div id="header" class="container">
    <div id="header-top" class="span-24">
      <div id="logo" class="prepend-1">
        <img src="/images/unptntbug.png">
      </div>
      <div class="column prepend-3 span-3">
        <h2>UnPtnt</h2>
      </div>
      <div class="column span-2">
        <h4><%= link_to 'projects', projects_path %></h4>
      </div>
      <div class="column span-2">
        <% if logged_in? then %>
          <h4><%= link_to 'dashboard', dashboard_path %></h4>
        <% end %>
      </div>
      <div class=" column span-2">
        <h4><%= link_to 'blog', 'http://blog.unptnt.com' %></h4>
      </div>
      <% if logged_in? then %>
        <div class="column prepend-7 span-1">
          <h4><%= link_to ' logout', logout_path %></h4>
        </div>
      <% else %>
        <div class="column prepend-7 span-1">
          <h4><%= link_to ' login', login_path %></h4>
        </div>
        <div class="column span-2">
          <h4><%= link_to ' signup', login_path %></h4>
        </div>
      <% end %>

    </div>
    <div id="header-middle" class="span-24">
      <div id="tab-bar" class="column prepend-4">
        <% tabs do |tab| %>
          <%= tab.project "project", project_path(@project) %>
          <%= tab.people "people", related_users_project_path(@project)%>
          <%= tab.discuss "discuss", project_forum_path(@project, @forum) %>
          <%= tab.materials "materials", project_boms_path(@project) %>
        <% end %>
      </div>
    </div>
    <div id="menu">

    </div>

  </div>


  </div>
  <div id="content" class="container">

    <%=@content_for_layout%>

  </div>
  <div id="footer" class="container">
    <div class="prepend-2 column span-18"></div>
    <hr></hr>
    <div class="prepend-18 column span-3" >
      <a href="http://blog.unptnt.com"><strong>blog</strong></a>
      <a href="/about.html"><strong>about</strong></a>
      <a href="/contact.html"><strong>contact</strong></a>

    </div>
  </div>
</body>
</html>