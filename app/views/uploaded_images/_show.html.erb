<% unless uploaded_image.nil?  then %>
  <%= image_tag uploaded_image.public_filename(uploaded_image_size)  %><br/>
<% else%>
  <% default_image = case image_type
     when "item" then "itemnoimglarge.png"
     when "project" then "noimgprojectlarge.png"
     when "user" then "avatar.gif"
     end %>
	<%= image_tag default_image, :size =>  IMAGE_SIZE[uploaded_image_size]  %>
<% end %>