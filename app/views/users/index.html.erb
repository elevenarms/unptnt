<% for user in @users do %>
	<% unless user.home_page_image.nil?  then %>
	  <%= image_tag user.home_page_image.public_filename,:height=>'45',:width=>'45' %>
	<% else%>
	  <%= image_tag 'avatar.gif',:height=>'45',:width=>'45' %>
	<% end %>&nbsp;&nbsp;&nbsp;
  <%= user.login %>&nbsp;(<%= user.name %> )<br/>
<% end %>
