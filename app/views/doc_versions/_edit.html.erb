
<% remote_form_for(doc_version) do |f| %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

    <%= f.label :content %><br />
    <%= f.text_area :content, :size => "700x40" %>

    <%= hidden_field_tag :item_id, item[:id] %>
    <%= hidden_field_tag :project_id, project[:id] %>
    <%= hidden_field_tag :home_page, home_page %>

  <p><%= f.submit "Save" %></p> or 
  
  <% unless item[:id] == 0 then %>
    <%= link_to_remote "cancel", :url => show_doc_version_bom_item_path(bom, item), :method => :get %>
  <% else %>
    <%= link_to_remote "cancel", :url => show_doc_version_project_path(project), :method => :get %>
  <% end %>

<% end %>
