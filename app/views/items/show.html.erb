<table>
    <tr id="item_fields">
      <td/><td/><td>
        <%= "<span id=\"item_" + "#{ @item.id }" + "\">"  %>  <!-- gets the id of the span to be the item_type -->  
          <%= render :partial => '/items/show_fields', :locals => { :item => @item } %>
        </span><br/>

        <%= render :partial => 'attachments/index', :locals => { :file_attachments => @file_attachments }  %><br />

      <span id="imagediv">
        <%= render :partial => '/items/show_image', :locals => { :item => @item, :bom => @bom, :project => session[:project] } %>
        </span><br/>
      </td><td/><td/><td/><td/>

      <span id="document">
        <%= render :partial => 'items/show_doc_version', 
              :locals => { :doc_version => @doc_version, :item => @item, :home_page => true, :bom => @bom, :project => session[:project] } %><br/>  
      </span>        
        
    </tr>
</table><br />


<div id="forum-link">
  <%= link_to "Item discussion forum", bom_item_forum_path(@bom, @item, @forum) %>
</div><br />

