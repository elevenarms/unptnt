
<% remote_form_for([bom, item])  do |f| %>

  <p>
    <%= f.label :item_type %><br />
    <%= f.select :item_type, @item_types %>
  </p>

  <p>
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity %>
  </p>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :info_url %><br />
    <%= f.text_field :info_url %>
  </p>

    <%= f.submit "Save" %>
<% end %>
    or
  <% unless item.new_record? then %>
    <%= link_to_remote "cancel", :url => bom_item_path(bom, item), :method => :get %>
  <% else %>
    <%= link_to "cancel",  [project, bom] %>
  <% end %>

