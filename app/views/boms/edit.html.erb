<h1>Edit bom for project <%=  @project.name %></h1>

<% form_for([@project, @bom]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label:name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label(@bom, :description) %><br />
    <%= f.text_field :description %>
  </p>
  
  <p>
    <%= f.submit "Update bom" %>
  </p>
<% end %>

<%= link_to 'Back to BOM', @bom %>
