
<% unless item.item_image_file_name.nil?  then %>
	  <p><%= image_tag item.item_image.url,:width=>'150' %></p>
          <% if logged_in? && current_user.is_editor?(project) then %>
            <%= link_to_remote "edit", :url => "/boms/#{ bom.id }/items/#{ item.id }/images/0/edit?", :method => :get %>
          <% end %>
<% else%>
	  <p><img src="/images/noimgprojectlarge.png"></p>
          <% if logged_in? && current_user.is_editor?(project) then %>
            <%= link_to_remote "add image", :url => new_bom_item_image_path(bom, item), :method => :get %>
          <% end %>
<% end %>

