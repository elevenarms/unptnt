require "selenium"
require "test/unit"

class NewTest < Test::Unit::TestCase
  def setup
    @verification_errors = []
    if $selenium
      @selenium = $selenium
    else
      @selenium = Selenium::SeleniumDriver.new("localhost", 4444, "*chrome", "http://change-this-to-the-site-you-are-testing/", 10000);
      @selenium.start
    end
    @selenium.set_context("test_new")
  end
  
  def teardown
    @selenium.stop unless $selenium
    assert_equal [], @verification_errors
  end
  
  def test_new
    @selenium.open "/"
    assert_equal "Unptnt - Make Something!", @selenium.get_title
    @selenium.click "link=login"
    @selenium.wait_for_page_to_load "30000"
    assert_equal "Unptnt - Make Something!", @selenium.get_title
    @selenium.click "commit"
    @selenium.wait_for_page_to_load "30000"
    assert_equal "Unptnt - Make Something!", @selenium.get_title
    begin
        assert @selenium.is_element_present("//img[@alt='Intro']")
    rescue Test::Unit::AssertionFailedError
        @verification_errors << $!
    end
    begin
        assert @selenium.is_text_present("Brownell Chalstrom")
    rescue Test::Unit::AssertionFailedError
        @verification_errors << $!
    end
    begin
        assert @selenium.is_element_present("link=edit profile")
    rescue Test::Unit::AssertionFailedError
        @verification_errors << $!
    end
    begin
        assert @selenium.is_element_present("//img[@alt='Brownell-small']")
    rescue Test::Unit::AssertionFailedError
        @verification_errors << $!
    end
    begin
        assert @selenium.is_element_present("//img[@alt='Newprojectbutton']")
    rescue Test::Unit::AssertionFailedError
        @verification_errors << $!
    end
    begin
        assert @selenium.is_element_present("link=Next Â»")
    rescue Test::Unit::AssertionFailedError
        @verification_errors << $!
    end
    begin
        assert @selenium.is_element_present("link=6")
    rescue Test::Unit::AssertionFailedError
        @verification_errors << $!
    end
    @selenium.click "//img[@alt='Newprojectbutton']"
    @selenium.wait_for_page_to_load "30000"
    assert_equal "", @selenium.get_title
    @selenium.type "project_name", "New Project Silenium Test"
    @selenium.click "project_submit"
    assert_equal "New Project Silenium Test", @selenium.get_title
    @selenium.click "link=discuss"
    assert_equal "Unptnt - Make Something!", @selenium.get_title
    @selenium.click "forum_submit"
    assert_equal "New Project Silenium Test", @selenium.get_title
    @selenium.type "topic_title", "first topic"
    @selenium.type "topic_body", "first post of first topic"
    @selenium.click "commit"
    assert_equal "New Project Silenium Test", @selenium.get_title
    @selenium.click "link=Reply to topic"
    @selenium.type "post_body", "second post of first topic"
    @selenium.click "commit"
    assert_equal "New Project Silenium Test", @selenium.get_title
    @selenium.click "link=edit"
    assert_equal "New Project Silenium Test", @selenium.get_title
    @selenium.type "topic_title", "first topic - edited"
    @selenium.click "commit"
    assert_equal "Action Controller: Exception caught", @selenium.get_title
  end
end
